<h1>Add new post</h1>
<%= form_for @risi do |f| %>
    <p>
        <%= f.label :title %><br />    
        <%= f.text_field :title %><br />    
    </p>
    <p>
        <%= f.label :body %><br />    
        <%= f.text_area :body %><br />    
    </p>
    <p>
        <%= f.select :category_id, Category.all.collect {|x| [x.name, x.id]}, {:include_blank => "Select one"} %><br />      
    </p>
    <p>
        <%= f.submit "Add Post" %><br />       
    </p>
<% end %>
